<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Image en haut -->
    <ImageView
        android:id="@+id/image_acceuil"
        android:layout_width="wrap_content"
        android:layout_height="338dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/acceuil" />

    <!-- Bouton directement en dessous de l'image -->

    <Button
        android:id="@+id/btn_reservations"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="220dp"
        android:background="#FD5E1C"
        android:text="Mes Reservations"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_agences"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="156dp"
        android:background="#FD5E1C"
        android:text="Agences"
        android:textColor="@color/white" />
</RelativeLayout>